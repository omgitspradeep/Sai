<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.pk.sai.SaiBhajansActivity">


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="@dimen/factor_mdpi_20_dp"

      >

    <TextView
        android:id="@+id/sai_aarti_tv"
        android:text="@string/sai_aarti"
        android:layout_width="match_parent"
        android:layout_height="@dimen/factor_mdpi_40_dp"
        android:gravity="center"
        android:background="@color/azure"
        android:textSize="@dimen/textAppearance_mdpi_22_sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/factor_mdpi_40_dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/sai_aarti_tv"
        android:layout_marginStart="@dimen/factor_mdpi_10_dp"
        android:layout_marginTop="@dimen/factor_mdpi_20_dp"
        android:id="@+id/sai_aarti_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:id="@+id/sai_kriti_tv"
        android:layout_below="@+id/sai_aarti_rv"
        android:text="@string/sai_kriti_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/factor_mdpi_40_dp"
        android:gravity="center"
        android:background="@color/azure"
        android:textSize="@dimen/textAppearance_mdpi_22_sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/factor_mdpi_30_dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginStart="@dimen/factor_mdpi_10_dp"
        android:layout_below="@+id/sai_kriti_tv"
        android:layout_marginTop="@dimen/factor_mdpi_20_dp"
        android:id="@+id/sai_kriti_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:nestedScrollingEnabled="false"
        />

  </RelativeLayout>

</ScrollView>