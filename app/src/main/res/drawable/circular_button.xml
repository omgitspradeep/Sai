<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Pressed display -->

    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="@dimen/factor_mdpi_03_dp" />
            <stroke android:width="@dimen/factor_mdpi_01_dp" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#1034A6" android:endColor="@color/blue"  />
        </shape>
    </item>


    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="@dimen/factor_mdpi_03_dp" />
            <stroke android:width="@dimen/factor_mdpi_01_dp" android:color="#5e7974" />
            <solid android:color="#58857e"/>
        </shape>
    </item>



    <!-- Initial display -->
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="@dimen/factor_mdpi_03_dp" />
            <stroke android:width="@dimen/factor_mdpi_01_dp" android:color="#005f69" />
            <gradient android:angle="-90" android:startColor="@color/blue" android:endColor="@color/aqua_blue" />
        </shape>
    </item>
</selector>
